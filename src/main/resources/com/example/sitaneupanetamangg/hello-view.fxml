<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.sitaneupanetamangg.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TableView fx:id="orderTable" prefHeight="200.0" prefWidth="542.0">
     <columns>
         <TableColumn fx:id="orderIDColumn" prefWidth="100.0" text="Order ID" />
         <TableColumn fx:id="customerNameColumn" prefWidth="100.0" text="Customer Name" />
         <TableColumn fx:id="mobileNumberColumn" prefWidth="100.0" text="Mobile Number" />
         <TableColumn fx:id="pizzaSizeColumn" prefWidth="100.0" text="Pizza Size" />
         <TableColumn fx:id="toppingsColumn" prefWidth="100.0" text="Toppings" />
         <TableColumn fx:id="totalColumn" prefWidth="100.0" text="Total" />
     </columns>
   </TableView>
    <TextField fx:id="orderID" promptText="Order ID" />
    <TextField fx:id="customerName" promptText="Customer Name" />
    <TextField fx:id="mobileNumber" promptText="Mobile Number" />
    <TextField fx:id="pizzaSize" promptText="Pizza Size" />
    <TextField fx:id="toppings" promptText="Toppings" />
    <TextField fx:id="total" promptText="Total" />
    <Button mnemonicParsing="false" text="Insert" onAction="#InsertData" />
    <Button mnemonicParsing="false" text="Update" onAction="#UpdateData" />
    <Button mnemonicParsing="false" text="Delete" onAction="#DeleteData" />
    <Button mnemonicParsing="false" text="Load Data" onAction="#LoadData" />
    <Button mnemonicParsing="false" text="Fetch All" onAction="#fetchData" />

    <Label fx:id="welcomeText" />
</VBox>
